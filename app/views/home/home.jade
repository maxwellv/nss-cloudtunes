doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1=title
    .row
      .small-12.columns
        button#newArtist.tiny.radius New Artist
    .row
      .small-10.columns
        form(action='/artist', method='post', enctype='multipart/form-data')
          fieldset
            legend Add Artist
            .row
              .small-4.columns
                label Name
                input(type='text', name='name')
              .small-5.columns
                label Artist Image
                input(type='file', name='cover')
              .small-3.columns
                label &nbsp;
                button.tiny.radius Add Artist
      .small-2.columns
    .row
      .small-12.columns
        each artist in artists
          .artist
            .cover(style='background-image:url("'+artist.coverImage+'")')
            .name: a(href='/artist/' + artist._id)= artist.name

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

